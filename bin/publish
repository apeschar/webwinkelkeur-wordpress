#!/bin/bash

set -euo pipefail
cd "$(dirname "$0")/.."

if [[ $# -eq 0 ]]; then
    only_project=
elif [[ $# -eq 1 ]]; then
    only_project="$1"
    if [[ ! $only_project =~ ^[a-z]+$ ]] || [[ ! -f $only_project/project.yml ]]; then
        echo "No such project: $only_project" >&2
        exit 1
    fi
else
    echo "Usage: $0 [project]" >&2
    exit 1
fi

if ! version="$(git describe --tags --exact-match --match 'v*')"; then
    echo "No tag points at the current HEAD!" >&2
    exit 1
fi
version="${version#v}"

root="$PWD"

tmp="$(mktemp -d)"
cleanup() { rm -rf "$tmp"; }
trap cleanup EXIT

git push git@github.com:webwinkelkeur/wordpress master --tags

./bin/package

for project_yml in */project.yml; do
    project="$(dirname "$project_yml")"

    if [[ ! -z $only_project ]] && [[ $only_project != $project ]]; then
        continue
    fi

    repo="http://plugins.svn.wordpress.org/$project"
    svn="$root/svn/$project"

    if [[ ! -d $svn/.svn ]]; then
        mkdir -p "$svn"
        svn co "$repo" "$svn"
    fi

    if [[ ! -z $(svn status) ]]; then
        echo "Error: svn status isn't empty after checkout:" >&2
        svn status >&2
        exit 1
    fi

    rm -rf "$svn/trunk"
    mkdir "$svn/trunk"

    bsdtar xf "dist/$project-${version}.zip" -C "$svn/trunk" --strip-components 1 "$project"

    pushd $tmp/svn
    svn status | awk '/^!/ {print $2}' | xargs -r svn rm --force -q
    svn add --force trunk

    if [[ -z "$(svn status | wc -l)" ]]; then
        echo "$project: Nothing changed" >&2
        continue
    fi

    echo svn ci -m 'Update plugin' --username apeschar
    echo svn copy "$repo/trunk" "$repo/tags/${version}" -m "Tag ${version} release"
done
